            android:text="The Common Symptoms: Fever, dry cough, tiredness. Other Symptoms: Loss of taste or smell, nasal congestion, conjunctivitis, sore throat, headache, muscle or joint pain, chills, nausea or vomiting, diarrhea, skin rashes."
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView8" />

