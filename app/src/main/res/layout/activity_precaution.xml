            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="328dp"
            android:layout_height="250dp"
            android:layout_marginTop="432dp"
            android:fontFamily="@font/comfortaa_bold"
            android:text="Influenza, commonly known as the flu, is a contagious respiratory illness caused by influenza viruses. It affects the nose, throat, and sometimes the lungs, leading to a range of symptoms that can vary in severity. The flu can cause mild to severe illness, and at times can lead to death. Here are the common symptoms associated with the flu"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
